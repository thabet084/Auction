
<div class="container">
    <div class="stepwizard">
        <div class="stepwizard-row setup-panel">
            <div class="stepwizard-step">
                <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                <p>Step 1</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                <p>Step 2</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                <p>Step 3</p>
            </div>
        </div>
    </div>
    @*<form role="form">*@
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3> Step 1</h3>

                @await Component.InvokeAsync("Item")

                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>


            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3> Step 2</h3>

                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3> Step 3</h3>
                <button class="btn btn-success btn-lg pull-right" type="submit">Finish!</button>
            </div>
        </div>
    </div>
    @*</form>*@
</div>

@section scripts{

    <script>

    $(document).ready(function () {
         $("#errorItemNamePriceRequired").hide();
    })


        $("#btnAddItem").click(


            function () {
             debugger;
            if ($("#itemName").val()=="" || $("#itemPrice").val()=="") {
                $("#errorItemNamePriceRequired").show();

            }
            else {
                $("#errorItemNamePriceRequired").hide();
                $("div.errorRequired").remove();
                debugger;
                var itemViewModel = new Object();
                itemViewModel.Name = $("#itemName").val();
                itemViewModel.Price = $('#itemPrice').val();

                $.ajax({
                    data: itemViewModel,
                    type:'html',
                    type: "Post",
                    url: "@Url.Action("AddItem" , "Home")",


                    success: function (data) {

                          $("#div_Items").html(data);
                    },
                    error: function (data) {

                    },

                   // dataType: "json",
                    traditional: true

                });
            }
        }
    );
    </script>

}